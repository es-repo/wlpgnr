<resources>

  <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
  <style name="AppBaseTheme" parent="android:Theme.Holo">
    <item name="android:actionBarStyle">@style/ActionBar.Solid.Example</item>
    <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
  </style>

  <style name="ActionBar.Solid.Example" parent="@android:style/Widget.Holo.ActionBar.Solid">
    <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
  </style>
  <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Medium">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">17dp</item>
  </style>

  <style name="ToolBarButton">
    <item name="android:layout_height">85dp</item>
    <item name="android:layout_width">100dp</item>
    <item name="android:layout_weight">1</item>
    <item name="android:textSize">12dp</item>
    <item name="android:padding">10dp</item>
  </style>

</resources>